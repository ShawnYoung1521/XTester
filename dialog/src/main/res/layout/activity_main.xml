<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:onClick="onClick"
     android:text="普通对话框"
     android:id="@+id/showNormalDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="普通对话框 增加第三个选择按钮"
     android:onClick="onClick"
     android:id="@+id/showMultiBtnDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="列表选择对话框"
     android:onClick="onClick"
     android:id="@+id/showListDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="列表单选对话框"
     android:onClick="onClick"
     android:id="@+id/showSingleChoiceDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="列表多选对话框"
     android:onClick="onClick"
     android:id="@+id/showMultiChoiceDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="进度弹出框"
     android:onClick="onClick"
     android:id="@+id/showProgressDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="*输入对话框"
     android:onClick="onClick"
     android:id="@+id/showInputDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="*自定义输入对话框"
     android:onClick="onClick"
     android:id="@+id/showCustomizeDialog"
     />
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="*二级选择对话框"
     android:onClick="onClick"
     android:id="@+id/ExpandableListView"
     />

</LinearLayout>